
var styles = './app/stylesheets/'
var head = './app/templates/head.html'
var tail = './app/templates/tail.html'
var home = './app/templates/index.html'
var resume = './resume/resume.md'

module.exports.init = function(watchn) {

  watchn.watch('sass', [styles], function(options) {
    watchn.execute('make application.css', options, 'sass', false, true)
  })

  watchn.watch('home', [head, tail, home], function(options) {
    watchn.execute('make index.html', options, null, false, true)
  })

  watchn.watch('resume', [head, tail, resume], function(options) {
    watchn.execute('make resume', options, null, false, true)
  })
}

