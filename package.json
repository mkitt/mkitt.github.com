{
  "name": "mkitt.github.io",
  "description": "Matthew Kitt",
  "homepage": "https://mkitt.net/",
  "private": true,
  "version": "6.6.6",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --colors && rm ./main.js",
    "start": "webpack-dev-server --progress --colors",
    "flow": "flow",
    "lint": "eslint src"

  },
  "dependencies": {
    "glamor": "2.19.0",
    "marked": "0.3.6",
    "react": "15.4.1",
    "react-dom": "15.4.1"
  },
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.8",
    "babel-plugin-transform-flow-strip-types": "6.18.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "browser-sync": "2.18.2",
    "browser-sync-webpack-plugin": "1.1.3",
    "eslint": "3.11.1",
    "eslint-config-airbnb": "13.0.0",
    "eslint-loader": "1.6.1",
    "eslint-plugin-flowtype": "2.29.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.7.1",
    "flow-bin": "0.36.0",
    "json-loader": "0.5.4",
    "static-site-generator-webpack-plugin": "3.1.0",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2",
    "webpack-merge": "1.0.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "no-alert": 2,
      "no-console": 2,
      "no-debugger": 2,
      "semi": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  }
}
