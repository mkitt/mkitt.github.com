{
  "name": "mkitt.net",
  "description": "Web and mobile app developer specializing in modular design systems, front-end architecture, product development & team management.",
  "homepage": "https://mkitt.net/",
  "private": true,
  "version": "6.6.6",
  "license": "MIT",
  "scripts": {
    "build": "next build && next export -o build",
    "postbuild": "mv ./build/index.html ./ && mv ./build/404.html ./ && mv ./build/resume.html ./resume/index.html && rm -r ./build",
    "dev": "next"
  },
  "dependencies": {
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "next": "9.3.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-markdown": "4.3.1"
  },
  "devDependencies": {
    "babel-plugin-emotion": "10.0.33",
    "husky": "4.2.3",
    "lint-staged": "10.1.3",
    "prettier": "2.0.2"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "emotion"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
