
body
  font 14px/1.5 sans-serif

select, input, textarea, button
  font 99% sans-serif

pre, code, kbd, samp
  font-family monospace, sans-serif
  font-size 95%

html
  overflow-y scroll

ul, ol
  margin-left 2em

ol
  list-style-type decimal

nav ul, nav li
  list-style-image none
  list-style none
  margin 0

small
  font-size 85%

strong, th
  font-weight bold

td
  vertical-align top

sub, sup
  font-size 75%
  line-height 0
  position relative

sup
  top -0.5em

sub
  bottom -0.25em

pre
  margin 1em 0
  padding 0.5em
  white-space pre
  white-space pre-wrap
  word-wrap break-word

code
  padding 0 0.2em

pre code
  padding 0
  border none

blockquote
  font-style italic
  margin 1em
  padding-left 0.5em

dt
  font-weight bold

dd
  margin-left 1em
  margin-bottom: 1em

table
  margin 1em 0

table th
  text-align left
  padding 0.2em 1em

table td
  text-align left
  padding: 0.2em 1em

a:hover, a:active
  outline none

img
  margin 1em 0

